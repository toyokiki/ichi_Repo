<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_order_from_check" model="ir.ui.view">
			<field name="name">sale.order.form.check</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="attributes">
					<attribute name="context">{'search_default_customer':1, 'show_address': 0}</attribute>
				</xpath>
				<xpath expr="//field[@name='project_id']" position="after">
					<field name="check_order" string="Did you recieve an order?"/>
				</xpath>
				<xpath expr="//field[@name='date_order']" position="replace">
					<field name="date_order" invisible="0"/>
				</xpath>
			</field>
		</record>
	</data>
</openerp> 
